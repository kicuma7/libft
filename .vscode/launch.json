
{// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Valgrind",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minishell", // Caminho para o seu execut√°vel
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb", // Caminho para o GDB
			"setupCommands": [
				{
					"description": "Conectar ao Valgrind",
					"text": "target remote | vgdb --pid=14099", // Use o PID correto
					"ignoreFailures": false
				}
			]
		},
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/libft/bin",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				},
				{
					"description": "Set print options for GDB",
					"text": "-gdb-set print char-array-indexes off",
					"ignoreFailures": true
				}
			]
		}
	]
}
